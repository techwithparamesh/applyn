# Copy this file to `.env` for local dev or use these variables in your VPS panel.
# IMPORTANT: Never commit a real `.env` with secrets.

# --- Required in production ---
NODE_ENV=production

# Public port your Node server listens on
PORT=5000

# MySQL connection string (must start with mysql://)
# Format: mysql://USER:PASSWORD@HOST:3306/DBNAME
DATABASE_URL=mysql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:3306/YOUR_DB_NAME

# Use MySQL for all app data (users/apps/contact)
STORAGE=mysql

# Persist login sessions in MySQL (recommended for VPS)
SESSION_STORE=mysql

# Must be a long random string in production (at least 32+ chars)
SESSION_SECRET=replace-with-a-long-random-secret

# Optional: MySQL pool size (default 10)
DB_POOL_SIZE=10
